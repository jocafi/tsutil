{
  "name": "tsutil",
  "version": "1.0.0",
  "description": "Util library for projects developed in Typescript.",
  "author": "Joao Araujo (jocafi)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jocafi/tsutil"
  },
  "main": "dist/index.js",
  "scripts": {
    "start": "tsc && node dist/app.js",
    "build": "npm run build-ts",
    "build-ts": "tsc",
    "clean": "rimraf dist",
    "debug": "npm run build && node --nolazy --inspect-brk=9229 dist/app.js",
    "test": "karma start",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "tslint-fix": "tslint --fix -c tslint.json -p tsconfig.json",
    "watch": "npm run watch-ts",
    "watch-ts": "tsc -w"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jasmine": "^2.8.6",
    "jasmine-core": "^3.1.0",
    "karma": "^2.0.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-jasmine": "^1.1.1",
    "karma-typescript": "^3.0.12",
    "typescript": "^2.7.2"
  }
}
